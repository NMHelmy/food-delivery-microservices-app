spring:
  application:
    name: order-service
  datasource:
    url: jdbc:mysql://localhost:3306/${DB_NAME:fooddelivery_order}?useSSL=false&serverTimezone=UTC
    username: ${DB_USERNAME:your_mysql_username}
    password: ${DB_PASSWORD:your_mysql_password}
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQLDialect

server:
  port: 8084

eureka:
  client:
    service-url:
      defaultZone: ${EUREKA_URI:http://localhost:8761/eureka/}
    fetch-registry: true
    register-with-eureka: true
  instance:
    prefer-ip-address: true


logging:
  level:
    com.fooddelivery.orderservice: DEBUG
    org.springframework.web: DEBUG
    org.springframework.cloud.openfeign: DEBUG