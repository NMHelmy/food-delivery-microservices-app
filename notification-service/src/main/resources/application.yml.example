server:
  port: 8088

spring:
  application:
    name: notification-service

  datasource:
    url: jdbc:mysql://localhost:3306/${DB_NAME}?createDatabaseIfNotExist=true&useSSL=false&serverTimezone=UTC
    driver-class-name: com.mysql.cj.jdbc.Driver
    username: ${DB_USERNAME}
    password: ${DB_PASSWORD}

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQLDialect
        format_sql: true

  rabbitmq:
    host: localhost
    port: 5672
    username: yourusername
    password: yourpass

eureka:
  client:
    service-url:
      defaultZone: http://localhost:8761/eureka/
  instance:
    prefer-ip-address: true

management:
  endpoints:
    web:
      exposure:
        include: health,info,metrics

# RabbitMQ Queue Names
rabbitmq:
  queues:
    order-created: order.created.queue
    order-confirmed: order.confirmed.queue
    order-cancelled: order.cancelled.queue
    payment-confirmed: payment.confirmed.queue
    payment-failed: payment.failed.queue
    payment-refunded: payment.refunded.queue
    delivery-assigned: delivery.assigned.queue
    delivery-picked-up: delivery.picked-up.queue
    delivery-delivered: delivery.delivered.queue
  exchanges:
    order: order.exchange
    payment: payment.exchange
    delivery: delivery.exchange
